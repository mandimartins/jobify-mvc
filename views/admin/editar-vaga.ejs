<%- include('header') %>
<h2>
  Admin Vagas:
  <a href="/admin/vagas">Vagas</a>
</h2>
<div>
  <form method="POST">
    <label>Título</label>
    <input type="text" name="titulo" value="<%- vaga.titulo %>" />
    <br />
    <label>Descrição</label>
    <textarea cols="30" rows="10" name="descricao"><%- vaga.descricao %></textarea>
    <br />
    <label for="">Categoria</label>
    <select name="categoria">
      <% categorias.forEach( categoria => { %>
      <option value="<%- categoria.id %>"<% if(categoria.id == vaga.categoria) { %> selected <% } %> ><%- categoria.categoria %></option>
      <% }) %>
    </select>
    <br />
    <button>Salvar</button>
  </form>
</div>
<%- include('footer') %>
